	<foaf:Document rdf:nodeID="main">
		<dcterms:alternative xml:lang="ja">抱きしめられたい気持ち</dcterms:alternative>
		<dcterms:dateSubmitted rdf:datatype="&dcterms;W3CDTF">2011-09-10T15:12:17+09:00</dcterms:dateSubmitted>
		<dcterms:modified rdf:datatype="&dcterms;W3CDTF">2011-09-17T20:26:56+09:00</dcterms:modified>
		<schema:creativeWorkStatus xml:lang="en">Incomplete</schema:creativeWorkStatus>
