			<types:BoardPost rdf:about="http://jbbs.shitaraba.net/anime/9756/storage/1360227486.html#670">
				<rdfs:label rdf:datatype="http://www.w3.org/2001/XML_Schema#positiveInteger">670</rdfs:label>
