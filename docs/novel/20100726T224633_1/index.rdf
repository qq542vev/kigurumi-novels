				<rdfs:label rdf:datatype="http://www.w3.org/2001/XML_Schema#positiveInteger">465</rdfs:label>
				<dcterms:creator rdf:parseType="Resource">
					<foaf:nick rdf:datatype="http://www.w3.org/2001/XML_Schema#string">萌味屋</foaf:nick>
					<dcterms:identifier rdf:datatype="http://www.w3.org/2001/XML_Schema#string">xriOMPkqNA</dcterms:identifier>
